@model NimapMachineTestSolution.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<h2>Are you sure you want to delete this category?</h2>

<dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(model => model.CategoryName)</dt>
    <dd>@Html.DisplayFor(model => model.CategoryName)</dd>
</dl>

@using (Html.BeginForm("Delete", "Category", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CategoryId)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", "Category", null, new { @class = "btn btn-secondary" })
}
