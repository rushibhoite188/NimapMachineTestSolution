@model IEnumerable<NimapMachineTestSolution.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="display-6 text-primary mb-4">Product List</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12 text-right">
            @Html.ActionLink("Create New Product", "Create", "Product", null, new { @class = "btn btn-success btn-lg" })
        </div>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover table-striped table-bordered" id="productTable">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Product ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Category ID</th>
                    <th scope="col">Category Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>@product.ProductName</td>
                        <td>@product.CategoryId</td>
                        <td>@product.Category.CategoryName</td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger btn-sm mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination Section -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
 
</div>

<style>
    .display-6 {
        font-weight: 500;
        letter-spacing: 1px;
    }

    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
    }

    .btn-sm {
        font-size: 0.875rem;
    }

    .page-link {
        color: #007bff;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .pagination .page-item .page-link {
        border-radius: 0.25rem;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            opacity: 0.9;
        }
</style>
